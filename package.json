{
   "name": "accounts-service",
   "version": "0.0.1",
   "description": "Microservice to handle user authentication and accounts",
   "engines": {
      "node": ">=12.0.0.",
      "npm": "=6.0.0"
   },
   "devDependencies": {
      "@types/chai": "^4.2.11",
      "@types/mocha": "^7.0.2",
      "@types/node": "^8.0.29",
      "@types/sinon": "^9.0.0",
      "@types/webpack": "^4.41.12",
      "@types/webpack-dev-server": "^3.10.1",
      "arkit": "^1.6.4",
      "chai": "^4.2.0",
      "husky": "^4.2.5",
      "kill-port": "^1.6.0",
      "madge": "^3.8.0",
      "mocha": "^7.1.1",
      "nodemon": "^2.0.3",
      "nyc": "^15.0.1",
      "prettier": "2.0.4",
      "sinon": "^9.0.2",
      "supertest": "^4.0.2",
      "ts-loader": "^7.0.0",
      "ts-node": "3.3.0",
      "tslint": "^6.1.1",
      "tslint-config-prettier": "^1.18.0",
      "tslint-plugin-prettier": "^2.3.0",
      "typescript": "3.3.3333",
      "webpack": "^4.42.1",
      "webpack-cli": "^3.3.11",
      "webpack-node-externals": "^1.7.2"
   },
   "dependencies": {
      "@types/bcryptjs": "^2.4.2",
      "@types/body-parser": "^1.19.0",
      "@types/cors": "^2.8.6",
      "@types/helmet": "0.0.45",
      "@types/jsonwebtoken": "^8.3.9",
      "@types/morgan": "^1.9.0",
      "bcryptjs": "^2.4.3",
      "class-validator": "^0.11.1",
      "cors": "^2.8.5",
      "dotenv": "^8.2.0",
      "express": "^4.17.1",
      "express-request-id": "^1.4.1",
      "helmet": "^3.22.0",
      "http-terminator": "^2.0.2",
      "jsonwebtoken": "^8.5.1",
      "morgan": "^1.10.0",
      "pg": "^8.0.2",
      "reflect-metadata": "^0.1.10",
      "ts-node-dev": "^1.0.0-pre.44",
      "typeorm": "0.2.24",
      "validate-password": "^1.0.4"
   },
   "scripts": {
      "postinstall": "cp template.env .env",
      "clean:ports": "kill-port 5000",
      "start": "node -r ts-node/register ./src/index.ts start",
      "start:dev": "nodemon",
      "test:watch": "nodemon --watch . --ext ts --exec \"npm run test\"",
      "test": "env NODE_ENV=testing mocha -r ts-node/register  src/**/*.spec.ts",
      "lint": "tslint -c tslint.json 'src/**/*.ts'",
      "lint:fix": "npm run lint -- --fix",
      "build": "tsc",
      "bundle": "env NODE_ENV=production npm run build && webpack",
      "coverage": "nyc --reporter=html npm run test -- --reporter min",
      "dependency:check": "madge --circular --extensions ts ./src",
      "dependency:graph": "arkit src -o docs/dependencies.png",
      "docker:host": "echo %DOCKER_HOST% || echo ${DOCKER_HOST}",
      "docker:staging": "docker-compose -f docker-compose.yml -f ./docker/staging/docker-compose.yml up",
      "docker:down": "docker-compose down",
      "db": "docker-compose up --build",
      "db:rm": "docker-compose down && docker volume rm accounts_pgconf accounts_pgdata accounts_pglog",
      "dev": "docker-compose up --build -d && npm run start:dev",
      "staging": "npm run bundle && npm run docker:staging -- --build",
      "staging:rm": "docker-compose down && docker rm -f accounts",
      "pre-commit": "npm run lint:fix && npm run test"
   },
   "nodemonConfig": {
      "ignore": [
         ".git",
         "node_modules",
         ".vscode"
      ],
      "watch": [
         "src"
      ],
      "exec": "npm start",
      "ext": "ts"
   },
   "prettier": {
      "useTabs": true,
      "semi": true,
      "singleQuote": true,
      "trailingComma": "all",
      "bracketSpacing": true,
      "arrowParens": "avoid"
   },
   "husky": {
      "pre-commit": "npm run pre-commit"
   }
}
